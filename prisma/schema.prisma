// learn more about it in the docs: https://pris.ly/d/prisma-schema

//npx prisma db push => para pushear en la bd de mySQL database
generator client {
  provider = "prisma-client-js"
  output= "./generated/client"
}
// MY_SQL_DATABASE_URL="mysql://root:example@localhost:3307/mydb"
datasource db {
  provider = "mysql"
  url      = env("MY_SQL_DATABASE_URL")
}

// Definición de la tabla para los jugadores/as
model Player {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    rolls     Roll[]
}

// Definición de la tabla para las tiradas de dados
model Roll {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    dice1     Int
    dice2     Int
    isWinner  Boolean
    playerId  Int
    player    Player   @relation(fields: [playerId], references: [id])
}

